@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewBag.Title = "Register";
}

<form class="auth-container" asp-action="Register" method="post">
    <div>
        <label for="Username">Username:</label>
        <input type="text" id="Username" name="Username" required />
    </div>
    <div>
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" required />
    </div>
    <div>
        <label for="Password">Password:</label>
        <input type="password" id="Password" name="Password" required />
    </div>
    <div>
        <label for="ConfirmPassword">Please enter password again:</label>
        <input type="password" id="ConfirmPassword" name="ConfirmPassword" required />
    </div>
    <button type="submit">Register</button>
    <p>Have an account? <a asp-controller="Auth" asp-action="Login">Login</a></p>
    <p>Back home? <a asp-controller="Home" asp-action="Index">Home</a></p>
</form>

@if (ViewBag.Error != null)
{
    <div style="color: red;">
        @ViewBag.Error
    </div>
}