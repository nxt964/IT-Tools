@{
    ViewData["Title"] = "Premium Required";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm">
        <div class="card-body p-5">
            <i class="bi bi-lock-fill text-warning display-1"></i>
            <h1 class="mt-4">Tính năng Premium</h1>
            <p class="lead">
                Công cụ này chỉ dành cho người dùng Premium.
            </p>
            <hr />
            
            @if (Context.Session.GetInt32("UserId") != null)
            {
                @if (Context.Session.GetInt32("RequestPremium") == 1)
                {
                    <div class="alert alert-warning">
                        Bạn đã gửi yêu cầu nâng cấp Premium. Vui lòng chờ quản trị viên xác nhận.
                    </div>
                }
                else
                {
                    <a asp-controller="User" asp-action="RequestPremium" class="btn btn-warning btn-lg">
                        <i class="bi bi-star-fill me-2"></i> Nâng cấp lên Premium ngay
                    </a>
                }
            }
            else
            {
                <p>Vui lòng <a asp-controller="Auth" asp-action="Login">đăng nhập</a> để yêu cầu nâng cấp Premium.</p>
            }
        </div>
    </div>
</div>