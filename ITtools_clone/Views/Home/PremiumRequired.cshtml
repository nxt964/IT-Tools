@{
    ViewData["Title"] = "Premium Required";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm">
        <div class="card-body p-5">
            <i class="bi bi-lock-fill text-warning display-1"></i>
            <h1 class="mt-4">Premium Tool</h1>
            <p class="lead">
                This tool is only available for Premium users.
            </p>
            <hr />
            
            @if (Context.Session.GetInt32("UserId") != null)
            {
                @if (Context.Session.GetInt32("RequestPremium") == 1)
                {
                    <div class="alert alert-warning">
                        You have already requested to upgrade to Premium. Please wait for admin approval.
                    </div>
                }
                else
                {
                    <a asp-controller="User" asp-action="RequestPremium" class="btn btn-warning btn-lg">
                        <i class="bi bi-star-fill me-2"></i> Upgrade to Premium now!
                    </a>
                }
            }
            else
            {
                <p>Please <a asp-controller="Auth" asp-action="Login" class="fw-bold text-decoration-none">Log in</a> with a Premium account to use this tool!</p>
            }
        </div>
    </div>
</div>