@{
    ViewData["Title"] = "Add tool";
    Layout = "_AdminLayout";
}

<form asp-controller="Plugin" asp-action="UploadTool" method="post" enctype="multipart/form-data" class="upload-form">

    <div class="form-group">
        <label for="file">Choose DLL file:</label>
        <input type="file" name="file" class="form-control-file" required>
    </div>

    <button type="submit" class="btn btn-primary">Upload tool</button>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">
            @Html.Raw(ViewBag.Error)
        </div>
    }
    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success mt-3">
            @Html.Raw(ViewBag.Success)
        </div>
    }
</form>
