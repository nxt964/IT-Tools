<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITtools_clone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITtools_clone.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <style>
        /* Layout */
        body {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        /* Wrapper chứa Sidebar & Main */
        #wrapper {
            display: flex;
            width: 100vw;
            height: 100vh;
            transition: all 0.3s ease-in-out;
        }

        /* Sidebar */
        #sidebar {
            width: 250px;
            background-color: #f8f9fa;
            border-right: 1px solid #ddd;
            transition: width 0.3s ease-in-out, opacity 0.3s ease-in-out;
        }

        #sidebar.hidden {
            width: 0;
            opacity: 0;
            pointer-events: none; /* Ngăn chặn tương tác khi ẩn */
        }

        #sidebar a {
            color: #333 ;
            text-decoration: none;
            font-weight: 500;
            padding: 10px 15px;
            display: block;
        }

        #sidebar a:hover {
            background-color: #e9ecef;
        }

        #sidebar .nav-container {
            flex: 1;
            overflow-y: scroll;
            padding-bottom: 40px;
        }

        .nav-item {
            width: 100%;
        }

        .nav-item .nav-link {
            display: block;
            max-width: 100%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }


        /* Main container */
        #main-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            transition: margin-left 0.3s ease-in-out, width 0.3s ease-in-out;
        }

        /* Header */
        #header {
            background-color: #fff;
            border-bottom: 1px solid #ddd;
            padding: 10px 20px;
        }

        #home-tag {
            border: none;
            background: none;
            border-radius: 100%;
            cursor: pointer;
            width: 40px;
            height: 40px;
            margin-left: 5px;
            transition: background-color 0.3s ease-in-out;
        }

        #home-tag a {
            color: #333;
            text-decoration: none;
        }

        #home-tag:hover {
            background-color: #ebecec;
        }

        #search-box {
            width: 300px;
            padding: 5px 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        /* Toggle Button */
        #toggleSidebar {
            background: none;
            border: none;
            cursor: pointer;
            width: 40px;
            height: 40px;
            border-radius: 100%;
            transition: background-color 0.3s ease-in-out;
        }

        #toggleSidebar:hover {
            background-color: #ebecec;
        }

        #toggle-icon {
            margin-right: 8px;
            transition: transform 0.3s ease;
        }

        /* Content */
        #content {
            overflow-y: auto;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="d-flex flex-column">
            <div class="text-center mb-4">
                <a asp-controller="Home" asp-action="Index" class="fs-4 fw-bold">ITtools_clone</a>
            </div>

            <div class="nav-container">
                 @if (Context.Session.GetInt32("UserId") != null && Context.Session.GetInt32("isAdmin") == 1){
                    <a asp-controller="Plugin" asp-action="AddTool" class="btn" style="border: 1px solid gray;margin:4px; border-radius: 5px;">
                        Thêm công cụ
                    </a>
                }
                <ul class="nav flex-column">
                    @await Component.InvokeAsync("PluginsList")

                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="TestTool" class="nav-link">New Tool UI</a>
                    </li>

                    <li class="nav-link fw-bold text-uppercase text-muted small">Test UI</li>
                    @await Component.InvokeAsync("TestPlugin")
                </ul>
            </div>
        </nav>

        <!-- Main Container -->
        <div id="main-container">
            <header id="header" class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center justify-content-center">
                    <button id="toggleSidebar" class="d-flex justify-content-center align-items-center">
                        <i class="bi bi-list fs-2"></i>
                    </button>

                    <div id="home-tag" class="d-flex align-items-center justify-content-center">
                        <a asp-controller="Home" asp-action="Index" class="fs-4 fw-bold">
                            <i class="bi bi-house-door fs-2"></i>
                        </a>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <input type="text" id="search-box" placeholder="Search...">
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <p class="mx-2">Xin chào, @Context.Session.GetString("Username")</p>
                        <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger">Đăng xuất</a>
                    }
                    else{
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary mx-2">Đăng nhập</a>
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-primary">Đăng ký</a>
                }
                </div>
            </header>
            <div id="content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let sidebar = document.getElementById("sidebar");
            let toggleButton = document.getElementById("toggleSidebar");

            // Layout
            function updateLayout() {
				if (window.innerWidth > 800) {
					sidebar.classList.remove("hidden");
				} else {
                    sidebar.classList.add("hidden");
				}
			}

            toggleButton.addEventListener("click", function () {
                sidebar.classList.toggle("hidden");
            });

            window.addEventListener("resize", updateLayout);

            updateLayout();


            // Toggle icon
            let toggles = document.querySelectorAll('[data-bs-toggle="collapse"]');

            toggles.forEach(toggle => {
                let icon = toggle.querySelector("#toggle-icon");

                toggle.addEventListener("click", function () {
                    let isOpen = toggle.getAttribute("aria-expanded") === "true";
                    
                    icon.classList.toggle("bi-chevron-right", !isOpen);
                    icon.classList.toggle("bi-chevron-down", isOpen);
                });
            });
        });

    </script>
</body>
</html>
